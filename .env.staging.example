# =============================================================================
# STAGING ENVIRONMENT CONFIGURATION
# =============================================================================
# 
# This file contains environment variables optimized for staging deployment.
# Use this as a reference for setting up your staging environment.
#
# Staging-specific features:
# - Production-like settings with test data
# - Real API keys but with test/staging accounts
# - Enhanced logging for debugging
# - Stripe test mode
#

# =============================================================================
# RAKUTEN API CONFIGURATION - STAGING
# =============================================================================

# Staging Rakuten Application ID
# Use a dedicated staging API key if available, or your production key with caution
RAKUTEN_APPLICATION_ID=your_staging_rakuten_application_id_here

# Production-like API settings
RAKUTEN_API_BASE_URL=https://app.rakuten.co.jp/services/api
RAKUTEN_API_TIMEOUT=10000
RAKUTEN_RATE_LIMIT_RPS=1
RAKUTEN_RATE_LIMIT_RPD=1000
RAKUTEN_API_RETRY_ATTEMPTS=3
RAKUTEN_API_RETRY_DELAY=1000

# Enable health checks for monitoring
RAKUTEN_ENABLE_HEALTH_CHECKS=true
RAKUTEN_HEALTH_CHECK_INTERVAL=15

# =============================================================================
# APPLICATION CONFIGURATION - STAGING
# =============================================================================

NEXT_PUBLIC_API_URL=https://your-staging-domain.vercel.app
NODE_ENV=production

# =============================================================================
# MOCK DATA CONFIGURATION - STAGING
# =============================================================================

# Allow mock data fallback but prefer real data
USE_MOCK_RECIPES=true
MOCK_DATA_MODE=auto

# =============================================================================
# FEATURE FLAGS - STAGING
# =============================================================================

# Enable analytics for testing but not error reporting to avoid noise
ENABLE_ANALYTICS=true
ENABLE_ERROR_REPORTING=false

# =============================================================================
# AUTHENTICATION CONFIGURATION - STAGING
# =============================================================================

# Strong secret for staging: openssl rand -base64 32
NEXTAUTH_SECRET=your_staging_nextauth_secret_minimum_32_characters_long
NEXTAUTH_URL=https://your-staging-domain.vercel.app

# =============================================================================
# DATABASE CONFIGURATION - STAGING
# =============================================================================

# Staging database (could be separate from production)
DATABASE_URL=./data/staging.db

# =============================================================================
# SECURITY CONFIGURATION - STAGING
# =============================================================================

# Production-level security
BCRYPT_ROUNDS=12

# =============================================================================
# STRIPE CONFIGURATION - STAGING
# =============================================================================

# Use Stripe test keys for staging
# These should be different from development keys
STRIPE_SECRET_KEY=sk_test_your_staging_stripe_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_staging_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_staging_webhook_secret_here
STRIPE_PRICE_ID=price_your_staging_price_id_here