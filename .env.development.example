# =============================================================================
# DEVELOPMENT ENVIRONMENT CONFIGURATION
# =============================================================================
# 
# This file contains environment variables optimized for local development.
# Copy this file to .env.local and update the values as needed.
#
# Development-specific features:
# - Mock data enabled by default
# - Detailed logging enabled
# - Lower rate limits for testing
# - Test Stripe keys
#

# =============================================================================
# RAKUTEN API CONFIGURATION - DEVELOPMENT
# =============================================================================

# Your personal Rakuten Application ID for development
# Get your own key from https://webservice.rakuten.co.jp/
# Leave empty to use mock data during development
RAKUTEN_APPLICATION_ID=

# Development API settings (more lenient for testing)
RAKUTEN_API_BASE_URL=https://app.rakuten.co.jp/services/api
RAKUTEN_API_TIMEOUT=15000
RAKUTEN_RATE_LIMIT_RPS=0.5
RAKUTEN_RATE_LIMIT_RPD=100
RAKUTEN_API_RETRY_ATTEMPTS=2
RAKUTEN_API_RETRY_DELAY=2000

# Enable health checks for development debugging
RAKUTEN_ENABLE_HEALTH_CHECKS=true
RAKUTEN_HEALTH_CHECK_INTERVAL=5

# =============================================================================
# APPLICATION CONFIGURATION - DEVELOPMENT
# =============================================================================

NEXT_PUBLIC_API_URL=http://localhost:3000
NODE_ENV=development

# =============================================================================
# MOCK DATA CONFIGURATION - DEVELOPMENT
# =============================================================================

# Always allow mock data fallback in development
USE_MOCK_RECIPES=true
MOCK_DATA_MODE=auto

# =============================================================================
# FEATURE FLAGS - DEVELOPMENT
# =============================================================================

# Disable external services in development
ENABLE_ANALYTICS=false
ENABLE_ERROR_REPORTING=false

# =============================================================================
# AUTHENTICATION CONFIGURATION - DEVELOPMENT
# =============================================================================

# Generate a development secret: openssl rand -base64 32
NEXTAUTH_SECRET=development_secret_key_minimum_32_characters_long_for_local_testing
NEXTAUTH_URL=http://localhost:3000

# =============================================================================
# DATABASE CONFIGURATION - DEVELOPMENT
# =============================================================================

# Local SQLite database
DATABASE_URL=./data/app.db

# =============================================================================
# SECURITY CONFIGURATION - DEVELOPMENT
# =============================================================================

# Lower rounds for faster development
BCRYPT_ROUNDS=10

# =============================================================================
# STRIPE CONFIGURATION - DEVELOPMENT
# =============================================================================

# Use Stripe test keys for development
# Get these from https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your_development_stripe_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_development_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_development_webhook_secret_here
STRIPE_PRICE_ID=price_your_development_price_id_here