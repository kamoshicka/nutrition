# Production Environment Variables Template
# Copy this file to .env.production and fill in the actual values

# Application Environment
NODE_ENV=production
NEXT_PUBLIC_API_URL=https://your-domain.com

# NextAuth.js Configuration
NEXTAUTH_SECRET=your_production_nextauth_secret_minimum_32_characters_long
NEXTAUTH_URL=https://your-domain.com

# Database Configuration
DATABASE_URL=./data/production.db
# For production, consider using a managed database service
# DATABASE_URL=postgresql://user:password@host:port/database

# Security Settings
BCRYPT_ROUNDS=12

# Stripe Configuration (Production Keys)
STRIPE_SECRET_KEY=sk_live_your_production_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_production_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_production_webhook_secret
STRIPE_PRICE_ID=price_your_production_premium_plan_price_id

# Rakuten API Configuration
RAKUTEN_APPLICATION_ID=your_production_rakuten_application_id
USE_MOCK_RECIPES=false

# Monitoring and Analytics
ENABLE_ANALYTICS=true
ENABLE_ERROR_REPORTING=true

# Error Monitoring (Sentry)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-sentry-project

# Analytics (Google Analytics)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# SSL/TLS Configuration
FORCE_HTTPS=true

# Database Connection Pool (if using PostgreSQL)
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Cache Configuration (Redis if available)
REDIS_URL=redis://localhost:6379
ENABLE_REDIS_CACHE=false

# Email Configuration (for notifications)
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASSWORD=your-email-password
FROM_EMAIL=noreply@your-domain.com

# Backup Configuration
ENABLE_AUTOMATED_BACKUPS=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Health Check Configuration
HEALTH_CHECK_ENDPOINT=/api/health
HEALTH_CHECK_TIMEOUT=5000