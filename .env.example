# =============================================================================
# RAKUTEN API CONFIGURATION
# =============================================================================
# 
# To obtain a Rakuten API key:
# 1. Visit https://webservice.rakuten.co.jp/
# 2. Create a developer account or sign in
# 3. Register a new application
# 4. Copy the Application ID from your application dashboard
# 5. Set RAKUTEN_APPLICATION_ID below
#
# IMPORTANT: Keep your API key secure and never commit it to version control
#

# Required: Your Rakuten Application ID
# Format: 20-digit numeric string (e.g., 1234567890123456789)
# Leave empty or comment out to use mock data
RAKUTEN_APPLICATION_ID=your_rakuten_application_id_here

# Optional: Rakuten API Configuration
# Base URL for Rakuten Recipe API (default: https://app.rakuten.co.jp/services/api)
RAKUTEN_API_BASE_URL=https://app.rakuten.co.jp/services/api

# API request timeout in milliseconds (default: 10000)
RAKUTEN_API_TIMEOUT=10000

# Rate limiting configuration
# Requests per second (default: 1 - adjust based on your API plan)
RAKUTEN_RATE_LIMIT_RPS=1

# Requests per day (default: 1000 - adjust based on your API plan)
RAKUTEN_RATE_LIMIT_RPD=1000

# Retry configuration
# Number of retry attempts for failed requests (default: 3)
RAKUTEN_API_RETRY_ATTEMPTS=3

# Retry delay in milliseconds (default: 1000)
RAKUTEN_API_RETRY_DELAY=1000

# Health check configuration
# Enable periodic API health checks (default: true)
RAKUTEN_ENABLE_HEALTH_CHECKS=true

# Health check interval in minutes (default: 15)
RAKUTEN_HEALTH_CHECK_INTERVAL=15

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application base URL
NEXT_PUBLIC_API_URL=http://localhost:3000

# Node environment (development, staging, production)
NODE_ENV=development

# =============================================================================
# MOCK DATA CONFIGURATION
# =============================================================================

# Use mock recipe data when Rakuten API is unavailable or not configured
# Set to 'false' to disable mock data fallback (not recommended)
USE_MOCK_RECIPES=true

# Mock data behavior
# 'auto' - automatically use mock data when API key is missing or invalid
# 'force' - always use mock data regardless of API key configuration
# 'disabled' - never use mock data (may cause errors if API is unavailable)
MOCK_DATA_MODE=auto

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable analytics tracking (default: false for development)
ENABLE_ANALYTICS=false

# Enable error reporting to external services (default: false for development)
ENABLE_ERROR_REPORTING=false

# =============================================================================
# AUTHENTICATION CONFIGURATION (NextAuth.js)
# =============================================================================

# NextAuth secret key - MUST be at least 32 characters
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_here_minimum_32_characters

# NextAuth URL - should match your application URL
NEXTAUTH_URL=http://localhost:3000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# SQLite database file path (relative to project root)
DATABASE_URL=./data/app.db

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# BCrypt rounds for password hashing (10-12 recommended for production)
BCRYPT_ROUNDS=12

# =============================================================================
# STRIPE PAYMENT CONFIGURATION
# =============================================================================
#
# To set up Stripe:
# 1. Create account at https://stripe.com/
# 2. Get API keys from Dashboard > Developers > API keys
# 3. Set up webhook endpoint for subscription events
# 4. Create product and price in Dashboard > Products
#

# Stripe secret key (starts with sk_test_ for test mode, sk_live_ for production)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Stripe publishable key (starts with pk_test_ for test mode, pk_live_ for production)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Stripe webhook secret (starts with whsec_)
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe price ID for premium subscription (starts with price_)
STRIPE_PRICE_ID=price_your_premium_plan_price_id_here