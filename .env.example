# 楽天API設定
# 楽天ウェブサービス (https://webservice.rakuten.co.jp/) で取得
RAKUTEN_APPLICATION_ID=your_rakuten_application_id_here

# アプリケーション設定
NEXT_PUBLIC_API_URL=http://localhost:3000
NODE_ENV=development

# 開発用フラグ
# 楽天APIキーが設定されていない場合にモックデータを使用するかどうか
USE_MOCK_RECIPES=true

# 機能フラグ
ENABLE_ANALYTICS=false
ENABLE_ERROR_REPORTING=false

# NextAuth.js設定
NEXTAUTH_SECRET=your_nextauth_secret_here_minimum_32_characters
NEXTAUTH_URL=http://localhost:3000

# データベース設定
DATABASE_URL=./data/app.db

# セキュリティ設定
BCRYPT_ROUNDS=12